generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Settings {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  key   String
  value String
}

model Product {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  date_added   String
  artist       String
  title        String
  format       Format
  country      String
  year         Int
  label        String
  catno        String
  genres       String[]
  status       Status
  cover_status Int
  item_status  Int
  cover_image  String
  price        Int
  stock        Int
  notes        String
}

enum Format {
  vinyl
  cd
}

enum Status {
  used
  new
}
